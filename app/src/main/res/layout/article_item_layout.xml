<!--    This file designed the ECD Content Article layout within the application -->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="140dp"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginBottom="16dp"
app:cardElevation="8dp"
    >
<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:flexWrap="wrap"
    app:alignItems="flex_start"
    app:justifyContent="flex_start"
    app:alignContent="flex_start"
    app:flexDirection="row"
    >
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#412E7D"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_flexBasisPercent="30%"
        app:cardElevation="8dp"
        android:id="@+id/ivArticleCard"
        >
        <ImageView
            android:id="@+id/ivMapCard"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:src="@drawable/parenthealth"
            android:layout_marginTop="18dp"
            android:gravity="center"
            />

    </androidx.cardview.widget.CardView>
    <com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        app:layout_flexBasisPercent="70%"
        android:layout_height="match_parent"
        app:flexWrap="wrap"
        app:alignItems="center"
        app:justifyContent="flex_start"
        app:alignContent="flex_start"
        android:padding="4dp"
        >
        <TextView
            android:id="@+id/tvArticleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="#000000"
            app:layout_flexBasisPercent="100%"
            android:textSize="16sp"
            android:fontFamily="@font/psbold"
            app:layout_constraintLeft_toRightOf="@id/ivArticleCard"
            app:layout_constraintTop_toTopOf="@id/ivArticleCard"/>
        <TextView
            android:id="@+id/tvArticleDescription"
            android:layout_width="0dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_flexBasisPercent="100%"
            app:layout_constraintRight_toRightOf="parent"
            android:text="This video goes over how breastfeeding should be conducted in a professional setting"
            android:fontFamily="@font/psmediumitalic"></TextView>
    </com.google.android.flexbox.FlexboxLayout>
</com.google.android.flexbox.FlexboxLayout>
</androidx.cardview.widget.CardView>