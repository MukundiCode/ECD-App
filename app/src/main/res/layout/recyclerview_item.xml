<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    >
    <com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:flexWrap="wrap"
        app:alignItems="flex_start"
        app:justifyContent="flex_start"
        app:alignContent="flex_start"
        app:flexDirection="row">
        <androidx.cardview.widget.CardView
            android:background="#066D2E"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_flexBasisPercent="30%"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:id="@+id/ivArticleCard"
            app:cardBackgroundColor="#066D2E"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:text="Breastfeeding"
                android:textSize="16sp"
                android:fontFamily="@font/psbold"
                android:gravity="center"
                />
        </androidx.cardview.widget.CardView>
        <com.google.android.flexbox.FlexboxLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            app:layout_flexBasisPercent="70%"
            android:layout_height="match_parent"
            app:flexWrap="wrap"
            app:alignItems="center"
            app:justifyContent="flex_start"
            app:alignContent="flex_start"
            android:padding="4dp"
            >
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textColor="#000000"
                app:layout_flexBasisPercent="100%"
                android:textSize="16sp"
                android:fontFamily="@font/psbold"
                app:layout_constraintLeft_toRightOf="@id/ivArticleCard"
                app:layout_constraintTop_toTopOf="@id/ivArticleCard"/>
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_flexBasisPercent="100%"
                android:text="This video goes over how breastfeeding should be conducted in a professional setting"
                app:layout_constraintLeft_toLeftOf="@id/tvArticleTitle"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/psmediumitalic"
                app:layout_constraintTop_toBottomOf="@id/tvArticleTitle"/>
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>
</androidx.cardview.widget.CardView>


