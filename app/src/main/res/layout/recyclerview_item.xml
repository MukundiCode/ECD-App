<!--    This file designed the ECD Content list-item layout within the application -->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    app:cardElevation="8dp"
    >
    <com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:flexWrap="wrap"
        app:alignItems="flex_start"
        app:justifyContent="flex_start"
        app:alignContent="flex_start"
        app:flexDirection="row"
        >
        <androidx.cardview.widget.CardView
            android:background="#009688"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_flexBasisPercent="30%"
            app:cardElevation="8dp"
            android:id="@+id/ivArticleCard"
            app:cardBackgroundColor="#009688"
            >
            <ImageView
                android:id="@+id/ivPostImage"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:src="@drawable/baby"
                android:layout_marginTop="18dp"
                android:gravity="center"
                />
        </androidx.cardview.widget.CardView>
        <com.google.android.flexbox.FlexboxLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            app:layout_flexBasisPercent="70%"
            android:layout_height="match_parent"
            app:flexWrap="wrap"
            app:alignItems="center"
            app:justifyContent="flex_start"
            app:alignContent="flex_start"
            android:padding="4dp"
            >
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textColor="#000000"
                app:layout_flexBasisPercent="100%"
                android:textSize="16sp"
                android:fontFamily="@font/psbold"
                app:layout_constraintLeft_toRightOf="@id/ivArticleCard"
                app:layout_constraintTop_toTopOf="@id/ivArticleCard"/>
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_flexBasisPercent="100%"
                android:text="@string/this_ecd_content_is_available_to_view"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/psregular"></TextView>

        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.flexbox.FlexboxLayout>

</androidx.cardview.widget.CardView>









