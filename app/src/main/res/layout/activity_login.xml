<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/ct"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <com.jetradarmobile.snowfall.SnowfallView
        android:layout_width="412dp"
        android:layout_height="728dp"
        android:layout_below="@id/ct2"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:snowflakeImage="@drawable/yellow"
        app:snowflakeAlphaMax="255"
        app:snowflakeAlphaMin="150"
        app:snowflakeAngleMax="5"
        app:snowflakeSizeMax="20dp"
        app:snowflakeSizeMin="2dp"
        app:snowflakeSpeedMax="6"
        app:snowflakeSpeedMin="4"
        app:snowflakesAlreadyFalling="false"
        app:snowflakesFadingEnabled="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ct2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.flexbox.FlexboxLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flexWrap="wrap"
            app:alignItems="center"
            app:justifyContent="flex_start"
            app:alignContent="center"
            app:flexDirection="row"
            android:padding="10dp"
            android:background="@android:color/transparent"
            tools:context=".LoginActivity"
            >

            <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="center"
                app:alignContent="center"
                app:flexDirection="row"
                android:padding="10dp"
                android:background="@android:color/transparent"
                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="321dp"
                    android:layout_height="262dp"
                    android:layout_marginBottom="32dp"
                    app:srcCompat="@drawable/bbpnewlogo" />

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="parent"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="flex_start"
                app:alignContent="flex_start"
                app:flexDirection="column"
                android:padding="10dp"
                android:background="@android:color/transparent"
                >

                <TextView
                    android:text="Enter your username:"
                    android:fontFamily="@font/psbold"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_flexBasisPercent="100%"
                    android:layout_marginTop="20dp"
                    />

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:ems="14"
                    android:inputType="textPersonName"
                    android:hint="Username"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="#066D2E"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Login"
                    />

                <TextView
                    android:text="OR"
                    android:fontFamily="@font/psbold"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="#EA4139"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Continue as guest"
                    />

            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


