<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ContactActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:flexWrap="wrap"
        app:alignItems="center"
        app:justifyContent="flex_start"
        app:alignContent="flex_start"
        app:flexDirection="column"
        android:padding="10dp"
        android:background="#FAFAFA"
        >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.flexbox.FlexboxLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            app:flexWrap="wrap"
            app:alignItems="center"
            app:justifyContent="flex_start"
            app:alignContent="flex_start"
            app:flexDirection="column"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psbold"
                android:padding="15dp"
                android:text="Our Story"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pslight"
                android:padding="15dp"
                android:text="The Bhabhisana Baby Project is based in the Western Cape, South Africa, and was established in August 2015 by highly skilled therapists who recognised the need to help babies who come from underserved communities with early intervention during the critical 1 000-day period."
                android:textColor="@color/black"
                android:textSize="20dp" />

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:fillColor="#FFFFFFFF"
                app:pageColor="#00000000"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psbold"
                android:padding="15dp"
                android:text="Get in touch"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="flex_start"
                app:alignContent="center"
                app:flexDirection="row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/imageFacebook"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitStart"
                    android:tag="https://www.facebook.com/bhabhisanababyproject/"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageInstagram"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/facebook" />

                <ImageView
                    android:id="@+id/imageInstagram"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitStart"
                    android:tag="https://www.instagram.com/bhabhisanababyproject/?igshid=YmMyMTA2M2Y="
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageWhatsapp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.428"
                    app:srcCompat="@drawable/ig" />

                <ImageView
                    android:id="@+id/imageWhatsapp"
                    android:layout_width="70dp"
                    android:layout_height="85dp"
                    android:scaleType="fitStart"
                    android:tag="https://chat.whatsapp.com/HrqX8TOScucI2LDIUpEXvI"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageBbpPortal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/whatsapp" />

                <ImageView
                    android:id="@+id/imageBbpPortal"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitStart"
                    android:tag="https://ecdportal.azurewebsites.net/"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/bbpwebportal" />

            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psbold"
                android:padding="15dp"
                android:text="Location: 179 Belgravia Rd"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginEnd="16dp"
                android:padding="15dp"
                android:scaleType="fitStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/offices" />


    </com.google.android.flexbox.FlexboxLayout>
    </ScrollView>
</com.google.android.flexbox.FlexboxLayout>


